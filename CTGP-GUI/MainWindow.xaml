<Window x:Name="winMain" x:Class="CTGP_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CTGP_GUI"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="CTGP Revolution Setup" Height="500" Width="600" ResizeMode="NoResize">
    <Grid>
        <Frame x:Name="FrmMain" Source="Pages/Welcome.xaml" Height="410" VerticalAlignment="Top" NavigationUIVisibility="Hidden" Margin="20,10,20,0"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" >
            <Button x:Name="BtnBackward" Content="Back" Margin="0,0,10,0" Visibility="Hidden" Click="BtnBackward_Click"/>
            <Button x:Name="BtnForward" Content="Start installation" Style="{StaticResource AccentButtonStyle}" Click="BtnForward_Click" />
        </StackPanel>
    </Grid>
</Window>
